{
  "name": "ts-graphql-starter",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "UNLICENSED",
  "scripts": {
    "start": "concurrently -p \"{name}\" -n DEPS,SERVER -c bgBlue.bold,bgYellow.bold \"yarn start:deps\" \"yarn start:server\"",
    "start:server": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "start:deps": "docker-compose -f ./docker-compose.deps.yml up",
    "lint": "eslint . && prettier --check .",
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migration:new": "prisma migrate save --experimental",
    "prisma:migration:up": "prisma migrate up --experimental",
    "prisma:seed": "ts-node prisma/seed"
  },
  "devDependencies": {
    "@prisma/cli": "^2.6.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@prisma/client": "2.7.1",
    "apollo-server": "^2.18.2",
    "class-validator": "^0.12.2",
    "graphql": "^15.3.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0",
    "typedi": "^0.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
